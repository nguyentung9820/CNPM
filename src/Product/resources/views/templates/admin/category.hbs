<a href="/admin/category/add"><button type="button" style="margin-bottom: 20px;" class="btn btn-success" action=>Add Parent Category</button></a>
<h1>Parent Category</h1>
   <div>
        <table class="table">
              <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>image</th>
                    <th>Category</th>
                    <th>Active</th>
                    <th>Create at</th>
                    <th>Update at</th>
                    <th>Action</th>
                    <th>Children</th>
            </thead>
            {{#each categories}}
                <tbody>
                    <tr>
                            <th>{{@index}}</th>
                            <th><img style="width:60px; height:60px" src="/image/{{this.category_image}}"/></th>
                            <th>{{this.product_category}}</th>
                            {{#if this.active}}
                                <th>True</th>
                                {{else}}
                                <th>False</th>
                            {{/if}}
                            <th>{{this.created_at}}</th>
                            <th>{{this.update_at}}</th>
                            <th>
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" 
                                            type="button" 
                                            id="dropdownMenuButton" 
                                            data-toggle="dropdown" 
                                            aria-haspopup="true" 
                                            aria-expanded="false">
                                            Action
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="/admin/category/edit/{{this._id}}">Edit</a>
                                        <a data-id="{{this.product_category}}" class="dropdown-item"  href="/admin/category/delete/{{this._id}}">Delete</a>
                                    </div>
                                </div>
                            </th>
                            <th>
                                <a href="/admin/childcategory/{{this._id}}"><button class="btn btn-warning">View</button></a>
                            </th>
                    </tr>
                </tbody>
            {{/each}}
        </table>
    </div>
    

<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/3.0.1/handlebars.min.js"></script>
