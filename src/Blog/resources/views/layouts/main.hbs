{{!-- CSS blog --}}
<style>

.form-css{
    
    font-size: 1.5rem;
   transition: none;
    display: block;
     background-clip: padding-box;
     padding: 0.375rem 0.75rem;
     width:100%;
  max-height: 2000px;
     border: 1px solid #ced4da;
    border-radius: 0.25rem;
    margin: 10px;
    background-color: #ccc;
overflow: scroll;
}
.h1{
      font-size: 1.9rem;
    font-weight: 500;
}
.form-group li{
list-style: none;
    font-size: 1.5rem;
    font-weight: 300;
    font-size: 1.5rem;
    color: #666;
    line-height: 2.2rem;
}
input[name=comment] {
  width: 100%;
  padding: 12px;
  border: 1px solid rgb(71, 41, 41);
  border-radius: 4px;
  resize: vertical;
}
button[type="submit"] {
   background-color: #04AA6D;
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  float: right;
}
button[name="lock"] {
   background-color: #ca3328;
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  float: right;
  text-decoration: none;
}
button[name="lock"] a{
  color:white;
  text-decoration: none;
}

button[name="open"]{
  background-color:rgb(76, 212, 236);
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  float: left;
}
button[name="edit-post"] a ,button[name="open"] a{
   text-decoration: none;
}
button[name="open"]:hover{
  text-decoration: none;
  
}

.form-group li{
   border-left: 6px solid rgb(71, 194, 23);
  background-color: rgb(228, 226, 226);
  margin:10px;
}

.edit-comment{

 position: fixed;
 top: 50px;
 bottom: 0;
 left: 0;
 right: 0;

}
.edit-comment-modal{
margin:auto;
background-color:#58af9b;
width:600px;
height:600px;
z-index: 1;
border-radius: 7px;
padding: 12px;
}
.button-deletecomment{
float: right
}

.padding-name{
  padding-top: 20px
}


#form-group-comment{
display: none;
 position: fixed;
 top: 0;
 bottom: 0;
 left: 0;
 right: 0;
background-color:rgba(0, 0, 0, 0.4)
}
.form-group-comment-post{
margin:auto;
background-color:#58af9b;
width: 1000px;
height:800px;

z-index: 1;
border-radius: 7px;

}
.form-group-comment-post form{
  margin: 20px;
}
.form-group-comment-btn{

  margin-left: 450px;
}
button[name="edit-post"]{
   background-color: rgb(9, 32, 102);
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  float: right;
  text-decoration: none;
}
.form-group img{
width: 574px;
    height: 242px;
}

button[name="edit-post"]:hover{
  background-color:rgb(128, 140, 175);
  text-decoration: none;
}
@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,400,700&display=swap');
</style>
  
  
