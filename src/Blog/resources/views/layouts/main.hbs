<style>

.form-css {
  font-size: 1.5rem;
  transition: none;
  display: block;
  background-clip: padding-box;
  padding: 0.375rem 0.75rem;
  width:100%;
  max-height: 2000px;
  border: 1px solid #ced4da;
  border-radius: 0.25rem;
  margin: 10px;
  background-color: #58af9b;
  overflow: auto;
  margin-top: 55px;
}

.h1 {
  font-size: 1.9rem;
  font-weight: 500;
}

.form-group li {
  list-style: none;
  font-size: 1.5rem;
  font-weight: 300;
  font-size: 1.5rem;
  color: #666;
  line-height: 2.2rem;
}

input[name=comment] {
  width: 100%;
  padding: 12px;
  border: 1px solid rgb(71, 41, 41);
  border-radius: 4px;
  resize: vertical;
}
button[type="submit"] {
  background-color: #04AA6D;
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  float: right;
}

button[name="lock"] {
  background-color: #ca3328;
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  float: right;
  text-decoration: none;
}

button[name="lock"] a {
  color:white;
  text-decoration: none;
}

button[name="open"] {
  background-color:#037468!important;
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

button[name="edit-post"] a ,button[name="open"] a {
   text-decoration: none;
}

button[name="open"]:hover {
  text-decoration: none;
}

.form-group li {
  border-left: 6px solid rgb(71, 194, 23);
  background-color: rgb(228, 226, 226);
  margin:10px;
}

.edit-comment {
  position: fixed;
  top: 50px;
  bottom: 0;
  left: 0;
  right: 0;
}

.edit-comment-modal {
  margin:auto;
  background-color:#58af9b;
  margin-top: 0;
  width: 750px;
  overflow: auto;
  max-height: 830px;
  border-radius: 7px;
  padding: 12px;
}

.button-deletecomment {
  float: right;
}

.padding-name {
  padding-top: 20px;
}


#form-group-comment {
  display: none;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color:rgba(0, 0, 0, 0.4);
}

.form-group-comment-post {
  margin:auto;
  background-color:#58af9b;
  width: 1000px;
  height:800px;
  z-index: 1;
  border-radius: 7px;
}

.form-group-comment-post form {
  margin: 20px;
}

.form-group-comment-btn {
  margin-left: 450px;
}

button[name="edit-post"] {
  background-color: rgb(9, 32, 102);
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  float: right;
  text-decoration: none;
}

.form-group img {
  max-width:330px;
  display: block;
  margin-left: auto;
  margin-right: auto;
}

button[name="edit-post"]:hover {
  background-color:rgb(128, 140, 175);
  text-decoration: none;
}

.xoabaiviet {
  position: fixed !important;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  display:none;
  align-items: center;
  justify-content: center;
}

.xoabaiviet-hienthi {
  background-color: #f1f1f1;
  width: 700px;
  min-height: 300px;
}

.xoabaiviet-tieude {
  height: 100px;
  background: #009688;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  color: #fff;
}

.xoabaiviet-tieude p {
  width: 93%;
  margin-top: 0;
  margin-bottom: 1rem;
  padding: 93px;
}

.xoabaiviet-close {
  width: 7%;
  margin-top: -50px;
  height: 49px;
}

.xoabaiviet-luachon {
  margin: auto;
}


#xoabaiviet-co {
  background-color: red !important;
  color: white;
  text-decoration: none;
}

#xoabaiviet-co a {
  color: white;
  text-decoration: none;
}

#xoabaiviet-co, #xoabaiviet-khong {
  background-color: #4CAF50; /* Green */
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 20px;
  width: 120px;
  height: 60px;
  margin-left: 150px;
  margin-top: 60px;
  cursor: pointer;
}

.homepage {
  width: 100%;
  background-color: black;
  height: 77px;
  color: rgb(245, 244, 243);
  border: 1px solid #ced4da;
  border-radius: 0.25rem;
  margin: 10px;
}

.edit-comment-modal-store {
  height:333px
}

.newpost h1 {
  text-align: center;
  color:white;
  line-height: 1.8;
}

.newpost {
  background-color:black;
  width: 750px;
  margin: auto;
  height: 77px;
  border-radius: 7px;
  margin-bottom: 20px;
  margin-top: 10px;
}

.homepage h1 {
  text-align: center;
  color:white;
}

.btn-space {
  margin: 0 6px 0 6px;
}

.btn-right {
  float: right;
}

.btn-right a {
  color:white;
}

#nav-background {
  position: fixed;
  top: 0;
  z-index: 9000;
  height: 60px;
  width: 100%;
  background-color: white;
  border-bottom: 1px solid #ddd;
}

#nav-container{
  display: flex;
  max-width: 1000px;
}

#nav-header {
  width: 30%;
}

#nav-header h1 {
  display: block;
  font-size: 2em;
  font-weight: bold;
  line-height: 1.8;
}

#nav-header h1 a  {
  text-decoration:none;
}

#nav-container > nav > ul {
  list-style-type: none;
  margin: 0 auto;
}

.nav-ul {
  display: flex;
  max-width: 700px;
}

.nav-ul > li {
  display: flex;
  text-align: -webkit-match-parent;
}

.nav-link {
  flex-basis: auto;
  padding: 1rem 1.5rem;
  flex: 1;
  color: #444;
  text-decoration: none;
  font-weight: 600;
  font-size: 1.2rem;
  -webkit-transition: 200ms;
  transition: 200ms;
  text-align: center;
  height: 60px;
}

.nav-link >li > a {
  margin-top:12px;
}

.active-link {
  height: 60px;
  background-color: #f1f1f1;
}

.nav-link:hover {
  background-color: #f1f1f1;
}

