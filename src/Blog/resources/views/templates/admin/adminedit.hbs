<div class="edit-comment">
<div class="edit-comment-modal">

<form method="GET" action="/forum/admin/edit/store/{{postID}}">
  <div class="form-group">
      <label for="name">User Name</label>
       <button id='dongbaiviet' class="btn btn-danger button-deletecomment "><i class="fas fa-times-circle font-deletecomment"></i></button> 
      <input type="text" class="form-control" id="name" name="username" value="{{username}}">
    </div>
    <div class="form-group">
      <label for="caption">Hãy nhập nội dung bài viết </label>
      <input type="text" class="form-control" id="caption" aria-describedby="caption" name="caption" value="{{caption}}">
    </div>
    <div class="form-group">
          <img src="{{this.image}}"></img>
        {{#each this.arrCmt}}
            <li>
              {{this}}
            </li>
          {{/each}}

         </div>
    <div class="form-group">
      <label for="link">Link Image</label>
      <input type="text" class="form-control" id="image" placeholder="URL" name="image" value="{{image}}">
    </div>
    
    <button type="submit" class="btn btn-primary btn-space" >Save</button>
        {{#if this.allowToCmT}}
          <button name="lock"class="btn btn-primary btn-space" >
          <a href="/forum/admin/lockcomment/{{this.postID}}">Lock Comment</a>
          </button>  
      {{else}}

          <button name="open" class="btn btn-primary btn-space btn-right">
            <a href="/forum/admin/opencomment/{{this.postID}}">Open Comment </a>
          </button>
        {{/if}}

 </form>

      <button name="lock" id= "quanlybaivietcomment"class="btn btn-primary btn-space">Xóa bài viết</button>  


{{#each cmts}}

<form method="GET" action="/forum/admin/deletecomment/{{this._id}}">
<input value="{{this.caption}}"></input>
<button class="btn btn-danger"> Xóa </button>
</form>

{{/each}}
</div>

</div>

