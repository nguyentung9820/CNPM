   <thead>
     <div id="nav-background">
      <div id="nav-container">
        <header id="nav-header">
          <h1><a href="" id="nav-logo">HOME</a></h1>
       
        </header>
        <nav>
          <ul class="nav-ul hide-ul">
            <li><a class="nav-link active-link" href="/forum/admin/homepage">Home</a></li>
            <li><a class="nav-link" href="/forum/admin/newpost">Thêm bài mới</a></li>
           
